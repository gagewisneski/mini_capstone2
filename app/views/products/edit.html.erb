
<h1 class="page-header">Editing product: <%= @product.name %></h1>
<%= form_tag "/products/#{@product.id}", method: :patch do %>
  <div class="form-group">
    <%= text_field_tag :name, "#{@product.name}", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= text_field_tag :price, "#{@product.price}", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= text_field_tag :image, "#{@product.image}", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= text_field_tag :description, "#{@product.description}", class: "form-control description" %>
  </div>

  <div>
    <%= submit_tag "Save", class: "btn btn-danger btn-lg" %>
  </div>

<% end %>
