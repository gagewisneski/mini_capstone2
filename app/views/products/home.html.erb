<h1 class="page-header">These are all of my beautiful products:</h1>

<div class="row">
<% @products.each do |product|%>
  <div class="col-sm-6 col-lg-4">
    <div class="<%= product.discounted? %>">
    <div class="container">
      <h2 class = "product-name"><%= link_to product.name, "/products/#{product.id}" %>:</h2>
      <% if product.images.length > 0 %>
        <%= image_tag(product.images[0].image_src, class: "product-image")%>
      <% end %>
      <h3 class = "price"><%= number_to_currency(product.price) %></h3>
      <h4><%= product.description %></h4>
      <p><a class="btn btn-primary btn-lg" href="/products/<%= product.id %>" role="button">Add to cart</a></p>
    </div>
    </div>
  </div>
<% end %>
</div>

<h1 class="page-header">These are all of my beautiful suppliers:</h1>

<div class="row">
<% @suppliers.each do |supplier|%>
  <div class="col-sm-6 col-lg-4">
  <div class="jumbotron">
    <div class="container">
      <h2 class = "supplier-name"><%= link_to supplier.name, "/suppliers/#{supplier.id}" %>:</h2>
      <h4><%= supplier.email %></h4>
      <h4><%= supplier.phone %></h4>
    </div>
  </div>
  </div>
<% end %>
</div>