
<h1 class="page-header">Add a new product</h1>

<%= form_tag "/products", method: :post do %>
  <div class="form-group">
    <%= label_tag :name %>
    <%= text_field_tag :name, @product.name, class: "form-control" %>
  </div>

  <div class="form-group">
  <%= label_tag :price %>
    <%= text_field_tag :price, @product.price, class: "form-control" %>
  </div>

  <div class="form-group">
  <%= label_tag :description %>
    <%= text_field_tag :description, @product.description, class: "form-control description" %>
  </div>

  <div class="form-group">
  <%= label_tag :supplier_id %>
    <%= text_field_tag :supplier_id, @product.supplier_id, class: "form-control" %>
  </div>

  <div>
    <%= submit_tag "Save Product", class: "btn btn-danger btn-lg" %>
  </div>

<% end %>


